<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="false">
    <shape>
        <corners android:radius="16dp" />
        <solid android:color="@color/purple_500" />
        <padding
            android:bottom="5dp"
            android:left="10dp"
            android:right="10dp"
            android:top="5dp"
            />
    </shape>
</item>

<!-- State Pressed-->
<item android:state_pressed="true">
    <shape>
        <corners android:radius="16dp" />
        <solid android:color="@color/purple_500" />
        <padding
            android:bottom="5dp"
            android:left="10dp"
            android:right="10dp"
            android:top="5dp"
            />
    </shape>
</item>

<!-- State Enabled -->
<item android:state_enabled="true">
    <shape>
        <corners android:radius="16dp" />
        <solid android:color="@color/purple_500" />
        <padding
            android:bottom="5dp"
            android:left="10dp"
            android:right="10dp"
            android:top="5dp"
            />
    </shape>
</item>
</selector>