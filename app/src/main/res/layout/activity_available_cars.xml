<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvailableCars"
    android:background="@drawable/background_white1">

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        android:elevation="16dp"
        android:padding="12dp"
        app:cnb_iconSize="58dp"
        app:cnb_menuResource="@menu/bottom_nav_available_cars"
        app:cnb_orientationMode="horizontal"
        app:cnb_radius="4dp"
        app:cnb_textAppearance="?attr/textAppearanceHeadline5"
        app:cnb_unselectedColor="@color/gray" />
</RelativeLayout>