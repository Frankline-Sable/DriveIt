<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="30dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/object_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/duration_tag"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"

            android:src="@drawable/car_red" />

        <TextView
            android:id="@+id/duration_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/rounded_duration_chip"
            android:orientation="horizontal"
            android:text="Daily"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/object_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/object_image"
            android:text="Alpha Romeo 3c"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/object_pricing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/object_title"
            android:layout_marginTop="16dp"
            android:text="AED 3,920"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/object_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/object_pricing"
            android:alpha=".5"
            android:text="Per Week"
            android:textAppearance="?attr/textAppearanceHeadline6" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>